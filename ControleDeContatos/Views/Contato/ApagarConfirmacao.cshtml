@model ContatoModel
@{
    ViewData["Title"] = "Deseja apagar o contato?";
}

<div class="text-center">
    
    <h2>Realmente deseja apagar o contato?</h2>
    <h3>Contato: @Model.Nome</h3>
    
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Contato" asp-action="Index">Cancelar</a>
<a class="btn btn-danger btn-block" role="button" asp-route-id="@Model.Id" asp-controller="Contato" asp-action="Apagar">Confirmar</a>
