@model LoginModel
@{
    Layout = "_LayoutDeslogada";
    ViewData["Title"] = "Login";
}


@if (TempData["MensagemErro"] != null)
{
<div class="alert alert-danger" role="alert">
    <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
    @TempData["MensagemErro"]
</div>
}

<div class="container mt-5"> <!-- Adiciona espaçamento superior -->
    <div class="row justify-content-center">
        <div class="col-md-6"> <!-- Defina o tamanho do formulário aqui -->
            <form asp-controller="Login" asp-action="Entrar" method="post">
                <div class="form-group">
                    <label for="login">Login</label>
                    <input type="text" class="form-control" id="login" aria-describedby="emailHelp" placeholder="Enter email" asp-for="Login">
                    @Html.ValidationMessageFor(x => x.Login)
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Senha</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Senha" asp-for="Senha">
                    @Html.ValidationMessageFor(x => x.Senha)
                </div>
                <p class="mb-4 text-sm-center mx-auto">Esqueceu sua senha?  <a asp-action="RedefinirSenha" asp-controller="Login" class="text-primary text-gradient font-weight-bold">Redefinir minha senha</a></p>
                <button type="submit" class="btn btn-primary btn-block">Entrar</button>
            </form>
        </div>
    </div>
</div>